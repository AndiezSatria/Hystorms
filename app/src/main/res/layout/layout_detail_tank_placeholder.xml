<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/img_tank_placeholder"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="@dimen/normal_margin"
            android:layout_marginTop="@dimen/normal_margin"
            android:background="@color/gray_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/tv_name_placeholder"
            android:layout_width="0dp"
            android:layout_height="12dp"
            android:layout_marginStart="@dimen/normal_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginEnd="@dimen/normal_margin"
            android:background="@color/gray_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_tank_placeholder"
            app:layout_constraintTop_toTopOf="@+id/img_tank_placeholder" />

        <View
            android:id="@+id/tv_amount_placeholder"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_marginStart="@dimen/normal_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginEnd="@dimen/normal_margin"
            android:layout_marginBottom="@dimen/small_margin"
            android:background="@color/gray_background"
            app:layout_constraintBottom_toTopOf="@+id/tv_age_placeholder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_tank_placeholder"
            app:layout_constraintTop_toBottomOf="@+id/tv_name_placeholder" />

        <View
            android:id="@+id/tv_age_placeholder"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_marginStart="@dimen/normal_margin"
            android:layout_marginEnd="@dimen/normal_margin"
            android:layout_marginBottom="@dimen/small_margin"
            android:background="@color/gray_background"
            app:layout_constraintBottom_toBottomOf="@+id/img_tank_placeholder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_tank_placeholder" />

        <View
            android:id="@+id/img_plant_placeholder"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="@dimen/normal_margin"
            android:layout_marginTop="@dimen/normal_margin"
            android:layout_marginBottom="@dimen/normal_margin"
            android:background="@color/gray_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_tank_placeholder" />

        <View
            android:id="@+id/tv_plant_name_placeholder"
            android:layout_width="0dp"
            android:layout_height="12dp"
            android:layout_marginStart="@dimen/normal_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_marginEnd="@dimen/normal_margin"
            android:background="@color/gray_background"
            android:maxLines="2"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_plant_placeholder"
            app:layout_constraintTop_toTopOf="@+id/img_plant_placeholder"
            tools:text="Tanki Bayam 23" />

        <View
            android:id="@+id/tv_scientific_name_placeholder"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_marginStart="@dimen/normal_margin"
            android:layout_marginTop="@dimen/normal_margin"
            android:layout_marginEnd="@dimen/normal_margin"
            android:background="@color/gray_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/img_plant_placeholder"
            app:layout_constraintTop_toBottomOf="@+id/tv_plant_name_placeholder" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>